<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="书名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rexiaoname"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/rexiaoimage"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="价格"
        android:textSize="20dp"
        android:textColor="#f82c22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rexiaoname"
        android:layout_alignStart="@+id/rexiaoname"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/rexiaoprice" />

    <TextView
        android:text="上书日期"
        android:textSize="18dp"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rexiaoimage"
        android:layout_alignStart="@+id/rexiaoprice"
        android:id="@+id/rexiaodate"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="5dp" />

    <ImageView
        app:srcCompat="@color/base_color_text_gray"
        android:id="@+id/rexiaoimage"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />
</RelativeLayout>
